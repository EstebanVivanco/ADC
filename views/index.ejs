                            </td>
                            <td>
                                <a href="/update/<%= plan.ID %>" class="btn btn-outline-info"> EDITAR </a>
                                <a href="/delete/<%= plan.ID %>" class="btn btn-outline-danger"> ELIMINAR </a>
                            </td>
                        </tr>
                        <% }) %>
            </tbody>
        </table>

      </div>
