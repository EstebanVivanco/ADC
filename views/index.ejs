<!-- Script para dataTable -->

<script>
$(document).ready(function() {
    $('#table').DataTable( {
        dom: 'Bfrtip',
        buttons: [
         
            {
                extend: 'csv',
                exportOptions: {
                    columns: [1, 2, 3,4] // Índices de las columnas que deseas exportar
                }
            },
            {
                extend: 'excel',
                exportOptions: {
                    columns: [1, 2, 3,4] // Índices de las columnas que deseas exportar
                }
            },
            {
                extend: 'pdf',
                exportOptions: {
                    columns: [1, 2, 3,4] // Índices de las columnas que deseas exportar
                },
                
                customize: function(doc) {
                    doc.content[1].table.widths = Array(doc.content[1].table.body[0].length + 1).join('*').split('');
                },
                
                title: 'Gastos y Facturaciones en Suscripciones'
            },
            {
                extend: 'print',
                exportOptions: {
                    columns: [1, 2, 3,4] // Índices de las columnas que deseas exportar
                },
                title: 'Gastos y Facturaciones en Suscripciones'

            }
        ]
    } );
} );

</script>


<script>
        // Obtén una referencia a la tabla o columna específica
    var table = document.getElementById('table'); // Reemplaza 'miTabla' con el ID de tu tabla
    var gasto = document.getElementById('gasto'); 
    var column = 3; // Reemplaza 2 con el índice de la columna 'precio' (0 para la primera columna, 1 para la segunda, etc.)

    var sum = 0; // Variable de suma inicializada en 0

    // Itera sobre cada fila de la tabla (omitimos la primera fila de encabezado)
    for (var i = 1; i < table.rows.length; i++) {
    var cell = table.rows[i].cells[column];
    var cellValue = parseFloat(cell.textContent);

    if (!isNaN(cellValue)) {
        sum += cellValue;
    }
    }

    // Muestra o utiliza el valor acumulado de la suma
    console.log('La suma total de la columna "precio" es: ' + sum);

    gasto.innerHTML = 'Gasto Mensual en Suscripciones: $' + sum;

</script>



