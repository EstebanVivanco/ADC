    <!-- FIN NAVBAR -->

      <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header"> Nuevo Registro</div>
            <div class="card-body">
                <form action="/buscar" method="POST">

                    <div class="mb-3">
                      <label for="" class="form-label">Tipo de Suscripción</label>

                      <select id="id" name="id" class="form-select" tabindex="2">
                        <option selected> Seleccione una opción: </option>
                        <% results.forEach((tipo) => { %>
                        <option value="<%= tipo.Id %>" > <%= tipo.Nombre %> </option>
                        <% }) %>
                      </select>

                    </div>
           
                    <button type="submit" class="btn btn-warning">Buscar</button>

                  </form>

                  <form method="POST" action="/save"> 

                    <% if(data != 0){ %>
                        
                      <hr class="mt-40">

                      <h5 class="modal-title">Selecciona entre las opciones: </h5>

                      <label for="" class="form-label mt-4"> Suscripciones Disponibles : </label>


                        <select id="id_sus" name="id_sus" class="form-select" tabindex="2">

                          <% data.forEach((sus) => { %>
                          <option value="<%= sus.ID %>" > <%= sus.Nombre %> </option>
                          <% }) %>

                        </select>
                      
                      <label for="" class="form-label mt-4"> Precio de la Suscripción : </label>
                      
                      <input type="number" id="precio" name="precio" class="form-control" placeholder="Precio de la Suscripción">
                        
                        
                      <label for="" class="form-label mt-4"> Fecha de facturación : </label>
                      
                      <input type="date" id="date" name="date" class="form-control" placeholder="Precio de la Suscripción">

                      <button type="submit" class="btn btn-warning mt-4"> Guardar Registro </button>


                      <% } %>

                  </form>



                  
            </div>
        </div>
      </div>
</body>
</html>